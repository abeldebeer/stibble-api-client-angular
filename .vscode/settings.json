// Place your settings in this file to overwrite default and user settings.
{
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.rulers": [
    100
  ],
  "files.exclude": {
    "**/*.js.map": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "tslint.autoFixOnSave": true,
  "typescript.extension.sortImports.sortMethod": "path",
  "typescript.extension.sortImports.sortOnSave": true,
  "typescript.extension.sortImports.quoteStyle": "single",
  "typescript.extension.sortImports.maxNamedImportsInSingleLine": 3,
  "typescript.extension.sortImports.pathSortOrder": [
    "package",
    "relativeUpLevel",
    "relativeDownLevel"
  ]
}
